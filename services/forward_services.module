/**
 * @file
 * Add the support for Forward module
 */

function forward_services_service_links() {
  $links = array();

  $links['forward'] = array(
    'name' => 'Forward',
    'link' => url('forward', array('absolute' => TRUE, 'query' => 'path=node/')) .'<node-id>',
    'description' => t('Send to a friend'),
  );
  
  return $links;
}

